{{#if listado.length }}
    {{#each listado}}
    <a href="https://sony.com" class="card" onclick="agregarCarrito(event,{{id}},this)">  {{!-- El id viene del backend. El parametro event (reservada) es para el e.preventdefault()  --}}
        <article class="card__article">
            <div class="card__image" style="background-image: url('{{foto}}')">
            </div>
            <div class="card__content">
                <h3 class="card__heading">{{nombre}}</h3>
                <div class="card__description">
                    <p>{{detalles}}</p>
                </div>
            </div>
        </article>
    </a>
    {{/each}}
{{else}}
    <div></div>
{{/if}}
